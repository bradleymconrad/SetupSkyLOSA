<?xml version="1.0" encoding="UTF-8"?>
<kml xmlns="http://www.opengis.net/kml/2.2">
  <Document>
    <name>
      Permissible Sky-LOSA Camera Locations
    </name>

    <!-- Line/Polygon style -->
    <Style id='transparentGreen'>
      <LineStyle>
        <color>
          ff00ff00
        </color>
        <width>
          2
        </width>
      </LineStyle>
      <PolyStyle>
        <color>
          4d009900
        </color>
      </PolyStyle>
    </Style>

    <!-- Icon style -->
    <Style id="iconStyle">
      <IconStyle>
        <scale>
          1.3
        </scale>
        <color>
          ff0000ff
        </color>
        <colormode>
          normal
        </colormode>
        <Icon>
          <href>
            http://maps.google.com/mapfiles/kml/shapes/placemark_circle.png
          </href>
        </Icon>
      </IconStyle>
    </Style>

    <!-- Define flare stack location -->
    <Placemark>
      <name>
        Flare stack
      </name>
      <styleUrl>
        #iconStyle
      </styleUrl>
      <Style>
        <LabelStyle>
          <color>
            ffffffff
          </color>
          <scale>
            0
          </scale>
        </LabelStyle>
      </Style>
      <Point>
        <altitudeMode>
          clamptoground
        </altitudeMode>
        <coordinates>
          ###Insert Flare Stack Coordinates (csv)###
        </coordinates>
      </Point>
    </Placemark>

    <!-- Define regions of permissible camera location(s) -->
    ###Insert Permissible Regions###

    <!-- Set camera view -->
    <LookAt>
      <altitudeMode>
        clampToGround
      </altitudeMode>
      <longitude>
        ###Insert Flare Stack Longitude###
      </longitude>
      <latitude>
        ###Insert Flare Stack Latitude###
      </latitude>
      <range>
        ###Insert Camera Height###
      </range>
    </LookAt>
  </Document>
</kml>
